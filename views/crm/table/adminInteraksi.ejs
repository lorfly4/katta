<div class="container mt-4">
  <!-- Header -->
  <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0">Tabel Interaksi Sales</h1>
    </div>
    <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right" style="background-color: #f4f6f9">
        <li class="breadcrumb-item"><a href="/dashboard">Halaman Utama</a></li>
        <li class="breadcrumb-item active">Tabel Interaksi Sales</li>
      </ol>
    </div>
  </div>

  <form
    action="/admin-sales/interactions"
    method="GET"
    class="d-flex justify-content-between mb-2"
  >
    <input
      type="text"
      name="search"
      class="form-control form-control-sm"
      placeholder="Cari Nama PIC..."
      value="<%= search || '' %>"
    />
    <button type="submit" class="btn btn-sm btn-primary ml-2">Cari</button>
  </form>

  <!-- Tabel -->
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr class="text-center align-middle">
          <th style="width: 3em">No</th>
          <th>Nama PIC/Users</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (salesUsers && salesUsers.length > 0) { %> <%
        salesUsers.forEach(function(user, idx) { %>
        <tr>
          <td class="text-center"><%= idx + 1 %></td>
          <td class="text-center"><%= user.name %></td>
          <td class="text-center">
            <!-- Tombol Detail untuk mengarahkan ke halaman detailInteraksi -->
            <a
              href="/admin-sales/interactions/detail/<%= user.id %>"
              class="btn btn-sm btn-info"
            >
              Detail Interaksi
            </a>
            <a
              href="/admin-sales/clients/detail/<%= user.id %>"
              class="btn btn-sm btn-info"
            >
              Detail Klien
            </a>
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td class="text-center" colspan="3">Tidak ada data PIC Sales</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
