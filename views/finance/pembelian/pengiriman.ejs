<section class="content">
  <div class="container-fluid">
    <!-- Awal Main Content Tailwind -->
    <div class="max-w-full">
      <header
        class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4"
      >
        <h1 class="text-2xl font-semibold leading-tight">
          Pengiriman Pembelian
        </h1>
        <div class="flex flex-wrap gap-2 sm:gap-3 items-center">
          <button
            type="button"
            class="flex items-center gap-1 border border-gray-300 rounded-md px-3 py-1 text-sm text-gray-700 hover:bg-gray-100"
          >
            <i class="fas fa-chart-bar text-gray-600"></i> <span>Laporan</span>
            <i class="fas fa-chevron-down text-gray-600 text-xs"></i>
          </button>
          <a
            href="/pembelian/pengiriman/create"
            class="flex items-center gap-1 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold py-2 px-4 rounded"
          >
            <i class="fas fa-plus"></i> Tambah
          </a>

          <button
            type="button"
            class="flex items-center gap-1 border border-gray-300 rounded-md px-3 py-1 text-sm text-gray-700 hover:bg-gray-100"
          >
            <i class="fas fa-external-link-alt text-gray-600"></i>
            <span>Ekspor</span>
          </button>
          <button
            type="button"
            class="flex items-center gap-1 border border-gray-300 rounded-md px-3 py-1 text-sm text-gray-700 hover:bg-gray-100"
          >
            <i class="fas fa-print text-gray-600"></i> <span>Print</span>
          </button>
          <button
            type="button"
            class="border border-gray-300 rounded-md px-2 py-1 text-gray-600 hover:bg-gray-100"
            aria-label="More options"
          >
            <i class="fas fa-ellipsis-v"></i>
          </button>
        </div>
      </header>

      <form
        method="GET"
        class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6"
      >
        <!-- Search -->
        <div class="flex items-center gap-2">
          <input
            type="search"
            name="search"
            placeholder="Cari nomor / vendor"
            value=""
            class="border border-blue-500 rounded-md px-3 py-1 text-sm text-gray-600 placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
          />
          <button
            type="submit"
            class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold py-2 px-4 rounded"
          >
            Cari
          </button>
        </div>

        <!-- Status Filter -->
        <div class="flex items-center gap-2">
          <label for="status" class="text-sm text-gray-600">Status</label>
          <select
            name="status"
            id="status"
            class="border border-gray-300 rounded-md px-3 py-1 text-sm text-gray-600 focus:outline-none"
          >
            <option value="semua">Semua</option>
            <option value="Open">Open</option>
            <option value="Selesai">Selesai</option>
          </select>
        </div>

        <!-- Date Range Filter -->
        <div class="flex items-center gap-2">
          <label class="text-sm text-gray-600">Tanggal</label>
          <input
            type="date"
            name="start_date"
            value=""
            class="w-28 text-xs text-gray-600 border border-gray-300 rounded-md px-2 py-1 focus:outline-none"
          />
          <span class="text-xs text-gray-400 select-none">â†’</span>
          <input
            type="date"
            name="end_date"
            value=""
            class="w-28 text-xs text-gray-600 border border-gray-300 rounded-md px-2 py-1 focus:outline-none"
          />
        </div>
      </form>

      <div class="overflow-x-auto">
        <table
          class="min-w-full text-left text-sm text-gray-600 border-separate border-spacing-y-2"
        >
          <thead>
            <tr class="bg-gray-50 border-b border-gray-200">
              <th class="pl-6 pr-3 py-3 w-12">
                <input type="checkbox" aria-label="Select all rows" />
              </th>
              <th class="px-3 py-3 font-semibold cursor-pointer select-none">
                Nomor <i class="fas fa-sort ml-1 text-gray-400"></i>
              </th>
              <th class="px-3 py-3 font-semibold cursor-pointer select-none">
                Vendor <i class="fas fa-sort ml-1 text-gray-400"></i>
              </th>
              <th class="px-3 py-3 font-semibold cursor-pointer select-none">
                Referensi <i class="fas fa-sort ml-1 text-gray-400"></i>
              </th>
              <th class="px-3 py-3 font-semibold cursor-pointer select-none">
                Tanggal <i class="fas fa-sort ml-1 text-gray-400"></i>
              </th>
              <th
                class="px-3 py-3 font-semibold cursor-pointer select-none pr-6"
              >
                Status <i class="fas fa-sort ml-1 text-gray-400"></i>
              </th>
            </tr>
          </thead>
          <tbody>
            <% pengiriman.forEach(function(item) { %>
            <tr class="bg-white border border-gray-100 rounded-lg">
              <td class="pl-6 pr-3 py-4 align-top">
                <input type="checkbox" />
              </td>
              <td class="px-3 py-4 align-top text-blue-600">
                <a href="#" class="hover:underline"><%= item.nomor %></a>
              </td>
              <td class="px-3 py-4 align-top">
                <p class="font-semibold text-gray-900 leading-tight">
                  <%= item.vendor %>
                </p>
                <p class="text-gray-400 text-xs leading-tight mt-0.5">
                  <%= item.detail %>
                </p>
              </td>
              <td class="px-3 py-4 align-top"><%= item.referensi %></td>
              <td class="px-3 py-4 align-top"><%= item.tanggal %></td>
              <td class="px-3 py-4 align-top pr-6 text-red-600">
                <%= item.status %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Akhir Main Content Tailwind -->
  </div>
</section>
