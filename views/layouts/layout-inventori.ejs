<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>CRM Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- AdminLTE CSS -->
    <link
      rel="stylesheet"
      href="/adminlte/plugins/fontawesome-free/css/all.min.css"
    />
    <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css" />
  </head>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"
              ><i class="fas fa-bars"></i
            ></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/dashboard" class="nav-link">Dashboard</a>
          </li>
        </ul>

        <!-- Right navbar -->
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <span class="nav-link"
              >Login sebagai: <strong><%= user.email %></strong></span
            >
          </li>
          <li class="nav-item">
            <a class="nav-link text-danger" href="/logout"
              ><i class="fas fa-sign-out-alt"></i> Logout</a
            >
          </li>
        </ul>
      </nav>

      <!-- Sidebar -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="#" class="brand-link">
          <i class="fas fa-chart-line ml-3 mr-2"></i
          ><span class="brand-text font-weight-light">CRM Sales</span>
        </a>

        <div class="sidebar">
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
            >
              <li class="nav-item">
                <a href="/produk" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Produk</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/inventori" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Inventori</p>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <!-- Content -->
      <div class="content-wrapper">
        <div class="content-header">
          <div class="container-fluid">
            <h1 class="m-0">Dashboard</h1>
            <p class="text-muted">Selamat datang, <%= user.name %>!</p>
          </div>
        </div>

        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <!-- Box 1 -->
              <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                  <div class="inner">
                    <h3>150</h3>
                    <p>Total Klien</p>
                  </div>
                  <div class="icon">
                    <i class="fas fa-users"></i>
                  </div>
                  <a href="/clients" class="small-box-footer">
                    Lihat Detail <i class="fas fa-arrow-circle-right"></i>
                  </a>
                </div>
              </div>

              <!-- Box 2 -->
              <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                  <div class="inner">
                    <h3>75</h3>
                    <p>Interaksi Hari Ini</p>
                  </div>
                  <div class="icon">
                    <i class="fas fa-comments"></i>
                  </div>
                  <a href="/interactions" class="small-box-footer">
                    Lihat Detail <i class="fas fa-arrow-circle-right"></i>
                  </a>
                </div>
              </div>

              <!-- Box 3 -->
              <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                  <div class="inner">
                    <h3>23</h3>
                    <p>Proposal Dikirim</p>
                  </div>
                  <div class="icon">
                    <i class="fas fa-file-alt"></i>
                  </div>
                  <a href="#" class="small-box-footer">
                    Lihat Detail <i class="fas fa-arrow-circle-right"></i>
                  </a>
                </div>
              </div>

              <!-- Box 4 -->
              <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                  <div class="inner">
                    <h3>12</h3>
                    <p>Transaksi Selesai</p>
                  </div>
                  <div class="icon">
                    <i class="fas fa-check-circle"></i>
                  </div>
                  <a href="#" class="small-box-footer">
                    Lihat Detail <i class="fas fa-arrow-circle-right"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Footer -->
      <footer class="main-footer text-center">
        <strong>&copy; 2025 CRM Sales.</strong> All rights reserved.
      </footer>
    </div>

    <!-- AdminLTE Scripts -->
    <script src="/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/adminlte/dist/js/adminlte.min.js"></script>
  </body>
</html>
